<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a315i.youcai.Activity.ProductActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_back"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/product_backIv"
            />
       <RelativeLayout
           android:layout_width="220dp"
           android:layout_height="40dp"
           android:layout_centerInParent="true"
           android:background="@drawable/product_search"
           android:alpha="0.8"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:src="@drawable/icon_fang"
               android:layout_centerVertical="true"
               android:layout_marginLeft="5dp"
               android:id="@+id/search_Iv"
               />
           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@+id/search_Iv"
               android:layout_marginLeft="5dp"
               android:layout_centerVertical="true"
               android:hint="请输入关键字"
               android:background="@null"
               android:id="@+id/product_search_Et"
               />
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/icon_x"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="5dp"
               android:id="@+id/product_search_delete"
               />

       </RelativeLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_kuai"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:id="@+id/product_changeLayout"

            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/product_RV"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
