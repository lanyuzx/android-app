<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a315i.youcai">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainDetailActivity" />
        <activity
            android:name=".Activity.ProductActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.CaiPuDetailActivity" />
        <activity android:name=".Activity.MoreInfoActivity" />
        <activity android:name=".Activity.WebViewActivity" />
        <activity android:name=".Activity.FeedbackActivity" />
        <activity android:name=".Activity.SearchActivity"></activity>
    </application>

</manifest>